<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Api.Buddy.Main.UI.MVVM"
        xmlns:ui="clr-namespace:Api.Buddy.Main.UI"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="600"
        x:Class="Api.Buddy.Main.UI.MainWindow"
        x:CompileBindings="True"
        x:DataType="vm:MainViewModel"
        Title="Api.Buddy.Main.UI">
    <Window.DataTemplates>
        <ui:ViewLocator/>
    </Window.DataTemplates>
    <Grid ColumnDefinitions="300 *">
        <StackPanel Grid.Column="0" Background="Brown" Orientation="Vertical" MinWidth="300">
            <Border>
                <WrapPanel Orientation="Horizontal">
                    <Label VerticalAlignment="Center">Projects</Label>
                    <ComboBox>
                        <ComboBoxItem>My Project</ComboBoxItem>
                    </ComboBox>
                </WrapPanel>
            </Border>
            <TreeView>
            </TreeView>
        </StackPanel>
        <TransitioningContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
    </Grid>
</Window>
