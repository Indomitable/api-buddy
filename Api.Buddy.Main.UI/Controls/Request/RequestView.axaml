<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Api.Buddy.Main.UI.MVVM"
             xmlns:controls="clr-namespace:Api.Buddy.Main.UI.Controls.Request"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Api.Buddy.Main.UI.Controls.Request.RequestView"
             x:CompileBindings="True"
             x:DataType="vm:RequestViewModel">
    <Grid RowDefinitions="400 *">
        <controls:RequestDetails Grid.Row="0" DataContext="{Binding RequestInit}" SendCommand="{Binding ((vm:RequestViewModel)DataContext).SendCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:RequestView }}" />
        <controls:ResponseView Grid.Row="1" DataContext="{Binding Response}" />
    </Grid>
</UserControl>
