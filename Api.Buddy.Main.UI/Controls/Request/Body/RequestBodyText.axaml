<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Api.Buddy.Main.UI.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Api.Buddy.Main.UI.Controls.Request.Body.RequestBodyText"
             x:DataType="models:TextBody"
             x:CompileBindings="True">
    <Panel>
        <TextBox Text="{Binding Content}" IsVisible="{Binding !IsReadOnly}" />
        <TextBlock Text="{Binding Content}" IsVisible="{Binding IsReadOnly}" TextWrapping="Wrap" />
    </Panel>
</UserControl>
