<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="clr-namespace:Api.Buddy.Main.UI.MVVM"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Api.Buddy.Main.UI.Controls.Request.ResponseView"
             x:DataType="mvvm:ResponseViewModel"
             x:CompileBindings="True">
    <TabControl SelectedIndex="0">
        <TabItem ContentTemplate="{Binding BodyDisplayDataTemplateSelector.BodyTemplate}" 
                 Content="{Binding Body}"
                 IsVisible="{Binding Body}">
            <TabItem.Header>Body</TabItem.Header>
        </TabItem>
        <TabItem>
            <TabItem.Header>Headers</TabItem.Header>
        </TabItem>
    </TabControl>
</UserControl>
